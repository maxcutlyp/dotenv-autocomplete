{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint"],
    "rules": {
        "@typescript-eslint/naming-convention": "warn",
        "@typescript-eslint/semi": "warn",
        "curly": "error",
        "eol-last": "error",
        "eqeqeq": ["error", "smart"],
        "no-throw-literal": "error",
        "semi": "off"
    },
    "ignorePatterns": ["out", "dist", "**/*.d.ts"]
}
