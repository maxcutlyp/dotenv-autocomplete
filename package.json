{
	"name": "dotenv-autocomplete",
	"displayName": "dotenv-autocomplete",
	"description": "A VSCode extension that autocompletes process.env variables from .env files",
	"version": "2.0.0",
	"publisher": "younesaassila",
	"repository": {
		"type": "git",
		"url": "https://github.com/younesaassila/dotenv-autocomplete"
	},
	"engines": {
		"vscode": "^1.65.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:typescript",
		"onLanguage:javascript",
		"onLanguage:typescriptreact",
		"onLanguage:javascriptreact"
	],
	"contributes": {
		"configuration": {
			"title": "dotenv-autocomplete",
			"properties": {
				"dotenv-autocomplete.envvarsScope": {
					"type": "string",
					"default": "all",
					"enum": [
						"all",
						"project"
					],
					"description": "Whether to suggest all environment variables or project-scoped ones only."
				},
				"dotenv-autocomplete.showEnvvarsValues": {
					"type": "boolean",
					"default": false,
					"description": "Show values of environment variables in the suggestions widget."
				}
			}
		}
	},
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "eslint src --ext ts",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"dependencies": {
		"dotenv": "^16.0.3",
		"fast-glob": "^3.2.12"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "^17.0.45",
		"@types/vscode": "^1.77.0",
		"@typescript-eslint/eslint-plugin": "^5.59.2",
		"@typescript-eslint/parser": "^5.59.2",
		"@vscode/test-electron": "^2.3.0",
		"eslint": "^8.39.0",
		"glob": "^8.1.0",
		"mocha": "^9.2.2",
		"typescript": "^4.9.5"
	}
}
